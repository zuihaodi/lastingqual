---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/HeaderEN.astro';

// English Data
const products = [
  {
    title: "High-end Rig Rental (ZJ90DB)",
    category: "Rental Service",
    desc: "Offering high-end rig rentals including ZJ90DB. Capable of drilling 9,396m deep wells (Asian record), suitable for extreme environments like Tarim and Mexico.",
    img: "/images/card1.jpg"
  },
  {
    title: "Oilfield Special Chassis (Sinotruk)",
    category: "Sales Business",
    desc: "Joint R&D with Sinotruk. Providing 8x6 fracturing chassis, sand blenders, and 58t coiled tubing chassis. Fully replacing imported MAN and Mercedes chassis.",
    img: "/images/card2.jpg"
  },
  {
    title: "Power Packaging Services",
    category: "Tech Service",
    desc: "One-stop power solutions for drilling rigs. Covering Northeast China, North China, Sichuan, and Inner Mongolia, serving 30+ drilling teams.",
    img: "/images/card3.jpg"
  },
  {
    title: "Mexico PEMEX Project Support",
    category: "Global Case",
    desc: "Supported Greatwall Drilling in winning the PEMEX project by leasing three 3000HP rigs, responding quickly to asset-light strategies.",
    img: "https://images.unsplash.com/photo-1581094794329-c8112a89af12?q=80&w=800"
  },
  {
    title: "Customized Diesel Gensets",
    category: "Joint R&D",
    desc: "Strategic partnership with Jichai Power to develop customized high-performance generator sets for the oil and petrochemical industry.",
    img: "https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?q=80&w=800"
  },
  {
    title: "HSE Risk Control",
    category: "Safety System",
    desc: "15-minute response, 24/7 online. Providing full-scenario risk assessment, real-time monitoring, and customized technical training.",
    img: "/images/product6.jpg"
  }
];
---

<Layout title="Products & Services | Lasting Qual">
  <Header />
  
  <main>
    <div class="bg-[#003865] py-16">
      <div class="max-w-7xl mx-auto px-4 text-center">
        <h1 class="text-4xl font-extrabold text-white">Products & Services</h1>
        <p class="mt-4 text-xl text-gray-300">Rig Sales & Rental | Power Packaging | Global Engineering</p>
      </div>
    </div>

    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
          
          {products.map((item) => (
            <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:-translate-y-1 transition duration-300 flex flex-col">
              <div class="h-48 overflow-hidden relative">
                <span class="absolute top-0 right-0 bg-[#E63E00] text-white text-xs font-bold px-3 py-1 m-2 rounded">
                    {item.category}
                </span>
                <img src={item.img} alt={item.title} class="w-full h-full object-cover hover:scale-105 transition duration-500">
              </div>
              <div class="p-6 flex-1 flex flex-col">
                <h3 class="text-xl font-bold text-[#003865] mb-2">{item.title}</h3>
                <p class="text-gray-600 text-sm leading-relaxed mb-4 flex-1">{item.desc}</p>
                <a href="/en/contact" class="text-[#E63E00] font-semibold text-sm hover:underline mt-auto">Learn More &rarr;</a>
              </div>
            </div>
          ))}

        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="bg-[#003865] py-12">
        <div class="max-w-5xl mx-auto px-4 text-center">
            <h2 class="text-2xl font-bold text-white mb-4">Industry-Leading Supply Chain</h2>
            <p class="text-gray-300 mb-8">
                From the Tarim Desert to Mexican oilfields, we provide precise, customized services.
            </p>
            <a href="/en/contact" class="bg-white text-[#003865] px-8 py-3 rounded font-bold hover:bg-gray-100 transition no-underline">
                Get a Quote
            </a>
        </div>
    </section>
  </main>

  <footer class="bg-[#002845] text-white py-8 border-t border-gray-700">
      <div class="max-w-7xl mx-auto px-4 text-center text-sm">
          <p>&copy; 2026 Lasting Qual Pte. Ltd. All rights reserved.</p>
      </div>
  </footer>
</Layout>