---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="联系我们 | Lasting Qual">
  <Header />
  
  <main>
    <div class="bg-[#003865] py-16">
      <div class="max-w-7xl mx-auto px-4 text-center">
        <h1 class="text-4xl font-extrabold text-white">联系我们</h1>
        <p class="mt-4 text-xl text-gray-300">期待与您合作</p>
      </div>
    </div>

    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 grid grid-cols-1 md:grid-cols-2 gap-16">
        
        <!-- 联系信息 -->
        <div>
          <h2 class="text-2xl font-bold text-[#003865] mb-6">联系方式</h2>
          <div class="space-y-6 text-gray-600">
            <p>
              <strong class="block text-gray-900">公司地址:</strong>
              123 Marina Bay Financial Centre, <br>
              Singapore 018981
            </p>
            <p>
              <strong class="block text-gray-900">电子邮箱:</strong>
              <a href="mailto:info@everwellspring.com" class="text-[#E63E00] hover:underline">info@everwellspring.com</a>
            </p>
            <p>
              <strong class="block text-gray-900">联系电话:</strong>
              +65 6789 1234
            </p>
          </div>
        </div>

        <!-- 简单的留言表单 -->
        <div class="bg-gray-50 p-8 rounded-lg">
          <form class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700">姓名</label>
              <input type="text" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2 border" placeholder="您的姓名">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">邮箱</label>
              <input type="email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2 border" placeholder="name@company.com">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">留言内容</label>
              <textarea rows="4" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2 border"></textarea>
            </div>
            <button type="button" class="w-full bg-[#E63E00] text-white py-2 rounded font-bold hover:bg-orange-700 transition">
              发送留言
            </button>
          </form>
          <p class="text-xs text-gray-400 mt-4">*注：这是一个静态演示表单，实际发送功能需对接后端。</p>
        </div>

      </div>
    </section>
  </main>

  <footer class="bg-[#002845] text-white py-8">
      <div class="max-w-7xl mx-auto px-4 text-center text-sm">
          <p>&copy; 2026 Lasting Qual Pte. Ltd. All rights reserved.</p>
      </div>
  </footer>
</Layout>