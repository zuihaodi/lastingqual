<header class="bg-white border-b border-gray-200 sticky top-0 z-50 shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo 区域 (点击回英文首页) -->
      <div class="flex-shrink-0 flex items-center cursor-pointer">
        <a href="/en" class="text-3xl font-extrabold text-[#003865] tracking-tighter no-underline">
          LASTING QUAL<span class="text-[#E63E00]">.</span>
        </a>
      </div>
      
      <!-- 英文导航菜单 -->
<nav class="hidden md:flex space-x-8">
  <a href="/en/about" class="text-gray-700 hover:text-[#003865] font-bold text-sm uppercase tracking-wide no-underline">About Us</a>
  <a href="/en/products" class="text-gray-700 hover:text-[#003865] font-bold text-sm uppercase tracking-wide no-underline">Products</a>
  <!-- 重点看下面这一行，必须是 /en/solutions -->
  <a href="/en/solutions" class="text-gray-700 hover:text-[#003865] font-bold text-sm uppercase tracking-wide no-underline">Solutions</a>
