---
// src/components/HeaderEN.astro
// 包含手机端交互功能的完整版
---
<header class="bg-white border-b border-gray-200 sticky top-0 z-50 shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      
      <!-- 1. Logo -->
      <div class="flex-shrink-0 flex items-center cursor-pointer">
        <a href="/en/" class="text-3xl font-extrabold text-[#003865] tracking-tighter no-underline">
          LASTING QUAL<span class="text-[#E63E00]">.</span>
        </a>
      </div>
      
      <!-- 2. Desktop Menu -->
      <div class="hidden md:flex items-center space-x-8">
        <nav class="flex space-x-8">
          <a href="/en/about" class="text-gray-700 hover:text-[#003865] font-bold text-sm uppercase tracking-wide no-underline">About Us</a>
          <a href="/en/products" class="text-gray-700 hover:text-[#003865] font-bold text-sm uppercase tracking-wide no-underline">Products</a>
          <a href="/en/solutions" class="text-gray-700 hover:text-[#003865] font-bold text-sm uppercase tracking-wide no-underline">Solutions</a>
          <a href="/en/contact" class="text-gray-700 hover:text-[#003865] font-bold text-sm uppercase tracking-wide no-underline">Contact</a>
        </nav>
        <!-- Desktop Lang Switch -->
        <a href="/zh" class="border border-[#003865] text-[#003865] px-3 py-1 rounded text-xs font-bold hover:bg-[#003865] hover:text-white transition no-underline">
          中文
        </a>
      </div>

      <!-- 3. Mobile Hamburger Button -->
      <div class="md:hidden flex items-center">
        <button id="mobile-menu-btn-en" class="text-[#003865] hover:text-[#E63E00] focus:outline-none p-2">
          <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- 4. Mobile Dropdown Menu -->
  <div id="mobile-menu-en" class="hidden md:hidden bg-gray-50 border-t border-gray-200">
    <div class="px-4 pt-4 pb-6 space-y-4 flex flex-col">
      <a href="/en/about" class="text-gray-700 font-bold hover:text-[#003865] no-underline">About Us</a>
      <a href="/en/products" class="text-gray-700 font-bold hover:text-[#003865] no-underline">Products</a>
      <a href="/en/solutions" class="text-gray-700 font-bold hover:text-[#003865] no-underline">Solutions</a>
      <a href="/en/contact" class="text-gray-700 font-bold hover:text-[#003865] no-underline">Contact</a>
      <!-- Mobile Lang Switch -->
      <a href="/zh" class="inline-block w-20 text-center border border-[#003865] text-[#003865] px-3 py-1 rounded text-xs font-bold hover:bg-[#003865] hover:text-white transition no-underline">
        切换中文
      </a>
    </div>
  </div>
</header>

<!-- 5. Script -->
<script>
  const btn = document.getElementById('mobile-menu-btn-en');
  const menu = document.getElementById('mobile-menu-en');

  if(btn && menu) {
    btn.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  }
</script>